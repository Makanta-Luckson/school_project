<%- include('./partials/head.ejs') %> 

        <div class="container">
            <h1>User Registrastion</h1>
            <div class="row">
               <div class="col-lg-6 col-sm-12">

                <%- include('./partials/errors.ejs') %> 

                   <form action="/users/StudentRegister" method="POST">
                    <div class="mb-3">
                        <strong><label for="first_name" class="form-label">First Name</label></strong>
                        <input type="text" class="form-control" id="first_name" placeholder="example: Luckson" name="first_name" >
                      </div>

                      <div class="mb-3">
                        <strong><label for="last_name" class="form-label">Last Name</label></strong>
                        <input type="text" class="form-control" id="last_name" placeholder="example: Makanta" name="last_name" >
                      </div>
                      <div class="mb-3">
                        <strong><label for="email" class="form-label">Email address</label></strong>
                        <input type="email" class="form-control" id="email" placeholder="example: makantaluckson71@gmail.com" name="email">
                      </div>

                      <div class="mb-3">
                        <strong><label for="number" class="form-label">Computer Number</label></strong>
                        <input type="text" class="form-control" id="first_name" placeholder="example: 2017006974" name="number">
                      </div>
                      <strong><label for="">Choose Department</label></strong>
                      <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="dep">
                        <option value="Library & Information Science">Library & Information Science</option>
                        <option value="Social Science">Social Science</option>
                        <option value="Religious & Ethics">Religious & Ethics</option>
                      </select>
                        <strong><label for="sex">Gender</label></strong>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sex" id="exampleRadios2" value="Male">
                            <label class="form-check-label" for="exampleRadios2">
                              Male
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="sex" id="exampleRadios2" value="Female">
                            <label class="form-check-label" for="exampleRadios2">
                              Female
                            </label>
                          </div>
                          <strong><label for="role">Role</label></strong>
                         
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="role" value="Student" >
                            <label class="form-check-label" for="role">
                              Student
                            </label>
                          </div>
                        
                          <button class="btn btn-success w-50">Register</button>
                          <br><br>
                   </form>
               </div>
            </div>
        </div>



<%- include('./partials/footer.ejs') %> 



